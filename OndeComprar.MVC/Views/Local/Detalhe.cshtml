<link rel="stylesheet" href="../../Public/Vendor/lightbox/css/lightbox.css">
<link rel="stylesheet" href="../../Public/Vendor/owl-carousel/css/owl.carousel.css">

@section scripts
{
    <script type="text/javascript" src="../../Public/Vendor/lightbox/js/lightbox.min.js"></script>
    <script type="text/javascript" src="../../Public/Vendor/owl-carousel/js/owl.carousel.min.js"></script>
    
