@model OndeComprar.MVC.Models.EmpresaViewModel

<div class="step ui-formwizard-content" id="second" style="display: none;">
    <!-- Step Info -->
    <div class="wizard-steps">
        <div class="row">
            <div class="col-xs-4 done">
                <span><i class="fa fa-check"></i></span>
            </div>
            <div class="col-xs-4 active">
                <span>2. Empresa</span>
            </div>
            <div class="col-xs-4">
                <span>3. Extra</span>
            </div>
        </div>
    </div>
    <!-- END Step Info -->
    <div class="form-group">
        @Html.LabelFor(x => x.Nome, new Dictionary<string, object>{{"class","col-md-4 control-label"}})
        <div class="col-md-6">
            @Html.TextBoxFor(x => x.Nome, new Dictionary<string, object>{{"class","form-control ui-wizard-content"},{"placeholder", "nome de usuário"}})   
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Cnpj, new Dictionary<string, object>{{"class","col-md-4 control-label"}})
        <div class="col-md-6">
            @Html.TextBoxFor(x => x.Cnpj, new Dictionary<string, object>{{"class","form-control ui-wizard-content"},{"placeholder", "nome de usuário"}})   
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.TextoDestaque, new Dictionary<string, object>{{"class","col-md-4 control-label"}})
        <div class="col-md-6">
            @Html.TextAreaFor(x => x.TextoDestaque, new Dictionary<string, object>{{"class","form-control ui-wizard-content"},{"placeholder", "Insira um texto de destaque"},{"rows", "3"}})   
        </div>
    </div>
    <div class="form-group">
        <label for="example-city" class="col-md-4 control-label">Palavras Chave</label>
        
        <div class="col-md-6">
            @Html.TextAreaFor(x => x.PalavrasChave, new Dictionary<string, object>{{"class","input-tags ui-wizard-content"},{"placeholder", "insira as palavras chave"},{"rows","2"}})               
            <span class="help-block">Insira até 10 palavras chave que informem o que sua empresa vende. <a href="#">Clique aqui para saber mais.</a></span> 
        </div>
        
    </div>
</div>
