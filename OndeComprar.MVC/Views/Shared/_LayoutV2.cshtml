        @Styles.Render("~/Content/less")
        
        @Styles.Render("~/Public/Styles/css2")
        
        @Scripts.Render("~/bundles/modernizr")
    </head>

    <body>
        
        @Html.Partial("_MenuTopo")
        
        @RenderSection("header", required: false)

        @RenderBody()
        
        @Html.Partial("_Footer")

